{
  "manifest_version": 3,
  "name": "",
  "description": "",
  "storage": {
    "managed_schema": "schema.json"
  },
  "version": "",
  "icons": {
    "48": "icon@48.png",
    "128": "icon@128.png"
  },
  "browser_action": {
    "default_icon": "icon@48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "*://go/*",
    "*://*.trot.to/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.trot.to/*"
      ],
      "js": [
        "data_injector.js"
      ],
      "run_at": "document_start"
    }
  ]
}
